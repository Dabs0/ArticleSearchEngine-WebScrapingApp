@model List<Article>
@{
    ViewData["Title"] = "Web Scraping";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arama Sonuçları</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h1>Arama Sonuçları</h1>
        <form action="/Search" method="get">
            <input type="text" name="keywords" placeholder="Anahtar kelimeleri girin...">
            <button type="submit">Yeniden Ara</button>
        </form>
    </header>

    <main>
        <aside id="filters">
            <h2>Filtreler</h2>
            <label>
                <input type="checkbox" name="research" value="research">
                Araştırma Makalesi
            </label>
            <label>
                <input type="checkbox" name="review" value="review">
                Derleme
            </label>
            <label>
                <input type="checkbox" name="conference" value="conference">
                Konferans Bildirisi
            </label>
            <label>
                <input type="checkbox" name="book" value="book">
                Kitap
            </label>
            <!-- Diğer filtreler buraya eklenebilir -->
        </aside>

        <section id="searchResults">
            <h2>Bulunan Makaleler:</h2>
            <ul>
                @foreach (var x in Model)
                {
                    <li>
                        <a href="/Home/Article?id=@x.Id">
                            <h3>@x.title</h3>
                        </a>
                    </li>
                    <p>@x.summary</p>
                }
            </ul>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Web Scraping Akademi Uygulaması</p>
    </footer>
</body>
</html>
