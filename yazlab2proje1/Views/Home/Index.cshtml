@model List<Entities.Concrete.AkademikYayin>
@{
    ViewData["Title"] = "Web Scraping";
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Scraping Akademi Uygulaması</title>
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <header>
        <h1>Web Scraping Akademi Uygulaması</h1>
    </header>
    <main id="publications">
        <!-- Bu alana MongoDB'den çekilen yayın bilgileri dinamik olarak eklenecek -->
        
        @foreach(var x in Model)
        {
            <article>
                <h2><a href="/Home/Article?id=@x.Id">@x.Ad</a></h2>
                <p>
                    Yazar: @foreach(Entities.Concrete.Yazar y in x.yazars)
                    {
                    <p>@y.yazarAdSoyad</p>
                            
                    }
                </p>
                <p>Yayın Tarihi: @x.yayinlanmaTarihi</p>
                <p>Özet: @x.ozet</p>
            </article>
        }
        
        <!-- Diğer yayınlar da benzer şekilde eklenecek -->
    </main>
    
</body>
</html>
